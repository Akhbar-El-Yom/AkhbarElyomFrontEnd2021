                                                                    </div>
                                                                    <div class="lower-box">
                                                                        <h3><a href="NewsDetails.aspx">@TN1.News?.Title</a></h3>

                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                        else
